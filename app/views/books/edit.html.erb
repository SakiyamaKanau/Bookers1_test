<h1>Editing Book</h1>
<div class="edit_form">
    <%= form_for(@book) do |f| %>
    <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <h4>Body</h4>
        <%= f.text_field :body %>
    </div>
        <%= f.submit 'Update Book' %>
    <% end %>
</div>
<%= link_to "Show", book_path(@book.id) %>
