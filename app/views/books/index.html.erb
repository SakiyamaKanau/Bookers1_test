<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body </th>
   <th></th>
  </tr>
</thead>
<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title%></td>
		<td><%= book.body%></td>
		<td><%= link_to "show", book_path(book.id) %></td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
</tbody>
</table>
</table>

<h3>New Books</h3>
<div class="create_form">
 <%= form_for(@book) do |f| %>
   <div class="field">
     <h2>Title</h2>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <h2>Body</h2>
     <%= f.text_area :body %>
   </div>
     <%= f.submit "Create Book"%>
 <% end %>
</div>